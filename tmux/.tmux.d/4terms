# Classic 4 panes

selectp -t 0             # select the first (0) pane
splitw -v -p 50          # split it vertically into two halves
selectp -t 0             # select the first one (0) again 
splitw -h -p 50          # split it horizontally into two halves
selectp -t 2             # select the pane on the right which is now (2)
splitw -h -p 50          # split it horizontally into two halves

# Run ls in pane 0
selectp -t 0
send-keys ls C-m


