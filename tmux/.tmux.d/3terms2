# 3 panes - big one on left and 2 on right

selectp -t 0             # select the first (0) pane
splitw -h -p 50          # split it vertically into two halves
selectp -t 1             # select the second (1) again 
splitw -v -p 50          # split it horizontally into two halves

# Run ls in pane 0
selectp -t 0
send-keys ls C-m

